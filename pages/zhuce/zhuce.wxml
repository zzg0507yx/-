<view class="container">
  <view class="login-from">
   
    <!--用户名-->
    <view class="inputView">
      <image class="nameImage" src="/images/name.png"></image>
      <label class="loginLab">用户名</label>
      <input class="inputText" placeholder="请输入用户名" bindinput="phoneInput" />
    </view>
    <view class="line"></view>

    <!--设置密码-->
    <view class="inputView">
      <image class="keyImage" src="/images/secret.png"></image>
      <label class="loginLab">设置密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <view class="line"></view>

    <!--重复密码-->
    <view class="inputView">
      <image class="keyImage" src="/images/secret.png"></image>
      <label class="loginLab">重复密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="denglu">注册/更改</button>
    </view>
  </view>
</view>